#!/usr/bin/env node

var CLI       = require('../lib/cli'),
    options   = require('pleeease')().defaults,
    program   = require('commander');

program.
    option('-t, to [file]', 'save compiled files to [file] (default: "' + options.out + '")', options.out).
    parse(process.argv);

var files = program.args;

if (!files.length) {
    files = options.in;
};

var inputs = files,
    output = program.to;

var cli = new CLI();
    cli.init('watch', inputs, output);